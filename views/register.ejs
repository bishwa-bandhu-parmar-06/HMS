    <!-- Custom CSS file -->
    <link rel="stylesheet" href="/stylesheets/register.css">
    <link rel="shortcut icon" href="../images/AaturaMain.png" type="image/x-icon">
</head>
<body>
     <!-- It is For menu top section -->
    <div class="menu-top">
        <div class="menu-top-right">
            <a href="/">
                <img src="/images/AaturaMain.png" alt="logo">
            </a>
        </div>
        <div class="menu-top-mid">
            <form action="/search" method="GET">
                <div class="search-area">
                    <input type="text" name="q" id="searchInput" placeholder="Search...">
                    <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </form>
        </div>
    </div>
    <hr>

    <div class="header">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
            <li id="Login"><a href="/patient/patient-login">Login</a></li>
            <li id="register"><a href="/patient/patient-signup">Register</a></li> 
        </ul>
    </div>

    <hr>

    <% if (errorMessage && errorMessage.length > 0) { %>
        <div class="alert alert-danger">
            <% errorMessage.forEach(function(error) { %>
                <p><%= error %></p>
            <% }); %>
        </div>
    <% } %>

    <% if (successMessage && successMessage.length > 0) { %>
        <div class="alert alert-success">
            <% successMessage.forEach(function(message) { %>
                <p><%= message %></p>
            <% }); %>
        </div>
    <% } %>

    <div class="body">
        <div class="container">
            <header>Registration</header>
    
            <form action="/patient/patient-signup" method="post">
                <div class="form first">
                    <div class="details personal">
                        <span class="title">Personal Details :</span>
                        <div class="fields">
                            <div class="input-field">
                                <label>Full Name :</label>
                                <input type="text" placeholder="Enter Your Name" name="name">
                            </div>
                            <div class="input-field">
                                <label>Email :</label>
                                <input type="email" placeholder="Enter Email" name="email">
                            </div>
                            <div class="input-field">
                                <label>Password :</label>
                                <input type="password" placeholder="Enter Password" name="password">
                            </div>
                        </div>
                        <button class="nextbtn" id="nextbutton" type="submit">
                            <span class="btntext">Register</span>
                        </button>
                        <p class="loginlink"><a href="/patient/patient-login">Already Registered? Login</a></p>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- #####################  FOOTER SECTION STARTS HERE ############################################## -->

