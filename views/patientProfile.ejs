<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Profile</title>
    <!-- Font Awesome CDN link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Custom CSS file -->
    <link rel="stylesheet" href="/stylesheets/pstientProfile.css">
    <link rel="shortcut icon" href="../images/AaturaMain.png" type="image/x-icon">
</head>
<body>
    <!-- Menu top section -->
    <div class="menu-top">
        <div class="menu-top-right">
            <a href="/">
                <img src="/images/AaturaMain.png" alt="logo">
            </a>
        </div>
        <div class="menu-top-left">
            <div class="menu-top-left-item">
                <a href=""><i class="fa-brands fa-facebook"></i></a>
            </div>
            <div class="menu-top-left-item">
                <a href=""><i class="fa-brands fa-linkedin"></i></a>
            </div>
            <div class="menu-top-left-item">
                <a href=""><i class="fa-brands fa-instagram"></i></a>
            </div>
            <div class="menu-top-left-item">
                <a href=""><i class="fa-brands fa-twitter"></i></a>
            </div>
            <div class="menu-top-left-item">
                <a href=""><i class="fa-solid fa-hospital"></i></a>
            </div>
        </div>
    </div>
    <hr>

    <!-- Header -->
    <div class="header">
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/about">About</a></li>
            <li id="services"><a href="#services1">Services</a>
                <ul>
                    <!-- Services dropdown content -->
                </ul>
            </li>
            <li><a href="/contact">Contact</a></li>
            <form action="/patient/patient-logout" method="POST">
                <button type="submit">Logout</button>
            </form>
            <li id="register"><a href="/patient/edit-details">Edit</a></li>
        </ul>
    </div>

    <!-- Patient Details Section -->
    <div class="patientsDetails">
        <div class="div">
            <div class="patientImage">
                <% if (patient.profileImage) { %>
                    <img src="/uploads/<%= patient.profileImage %>" alt="Profile Image">
                <% } else { %>
                    <img src="../images/doc.jpg" alt="Profile Image">
                <% } %>
            </div>
            <button>Edit</button>
            <button>Logout</button>
            <button>Remove</button>
        </div>
        <div class="patientContent">
            <p><strong>Name:</strong> <%= patient.name %></p>
            <p><strong>Email:</strong> <%= patient.email %></p>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer') %>
</body>
</html>